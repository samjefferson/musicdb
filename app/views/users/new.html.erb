<div class="input-box">
	<h1 class='input-box-heading'>Sign Up</h1>
	<%= form_for(@user)do |f| %>

		<%= f.label :username %>
		<%= f.text_field :username %>
		<br>
		<%= f.label :password %>
		<%= f.password_field :password %>
		<br>
		<%= f.label :password_confirmation %>
		<%= f.password_field :password_confirmation %>
		<br>
		<%= f.submit "Submit", class: "input-box-button" %>

	<% end %>

</div>

